<Window x:Class="WpfPresentation.frmPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Approve Application" Height="200" Width="300" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid Grid.Row="6" Grid.ColumnSpan="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Application Details" Padding="10,10,10,10" Width="120" TextWrapping="Wrap" Height="auto" />
        <TextBlock x:Name="txtApplicationDetails" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="Application Details" Padding="25,10,25,10" TextWrapping="Wrap" Height="auto" Margin="0,0,10,0"/>
        <Button x:Name="btnApprove" Content="Approve"  Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" Padding="5,5,5,5" VerticalAlignment="Top" Margin="10,0,10,0" Click="ApproveButton_Click" Background="#FFF4F2EC" BorderBrush="#FFDDDADA"/>
        <Button x:Name="btnDeny" Content="Deny"  Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5,5,5,5" Margin="10,0,10,0" Click="DenyButton_Click" Background="#FFF4F2EC" BorderBrush="#FFDDDADA"/>
    </Grid>
</Window>