@model PuppyAdoptionViewModel

@{
    ViewData["Title"] = "Adopt";
}
@section Styles {
    <link rel="stylesheet" href="~/css/litterDetail.css" asp-append-version="true" />
}

<h1>Adopt Puppy #@Model.Puppy.PuppyID</h1>

<h3 style="margin-bottom: 1em">Are you sure you want to adopt this puppy?</h3>

<div id="puppyContainer">
    <hr />
    <div id="divBoth">
        <div id="divImg">
            <img class="imgBorder" src="~/Photos/@Model.Puppy.Image" class="parent card-img-top" alt="Puppy Image" style="width: 60%; margin-bottom: 1em; object-fit: cover;">
        </div>
        <div id="divText" class="d-flex justify-content-center">
            <dl class="row text-center">
                <dd class="col-sm-10">
                    <b>Breed: </b>@Html.DisplayFor(model => model.Puppy.BreedID)
                </dd>
                <dd class="col-sm-10">
                    <b>Litter: </b>@Html.DisplayFor(model => model.Puppy.LitterID)
                </dd>
                <dd class="col-sm-10">
                    <b>Gender: </b>@Html.DisplayFor(model => model.Puppy.Gender)
                </dd>
                <dd class="col-sm-10">
                    <b>Adopted: </b>@Html.DisplayFor(model => model.Puppy.Adopted)
                </dd>
            </dl>
            <dl class="row text-center">
                <dd class="col-sm-10">
                    <b>Microchip: </b>@Html.DisplayFor(model => model.Puppy.Microchip)
                </dd>
                <dd class="col-sm-10">
                    <b>Price: </b>$@Html.DisplayFor(model => model.Puppy.Price)
                </dd>
                <dd class="col-sm-10">
                    <b>Treatments: </b>@Html.DisplayFor(model => model.MedicalRecord.Treatment)
                </dd>
                <dd class="col-sm-10">
                    <b>Weight: </b>@Html.DisplayFor(model => model.MedicalRecord.Weight)
                </dd>
                <dd class="col-sm-10">
                    <b>Issues: </b>@Html.DisplayFor(model => model.MedicalRecord.Issues)
                </dd>
            </dl>
        </div>
    </div>
</div>
<form asp-action="Adopt" style="display: flex; justify-content: center">
    <input type="hidden" asp-for="Adoption.PuppyID" />
    <input type="hidden" asp-for="Adoption.UserID" />
    <input type="hidden" asp-for="Adoption.ApplicationID" />
    <input type="hidden" asp-for="Adoption.Status" />
    <input type="submit" value="Adopt" class="btn btn-sm btn-outline-success" style="margin: 1em; font-size: 1em" />
    <a asp-action="Index" asp-route-breedID="@Model.Puppy.BreedID" class="btn btn-sm btn-outline-primary" style="margin: 1em; font-size: 1em">Back to List</a>
</form>