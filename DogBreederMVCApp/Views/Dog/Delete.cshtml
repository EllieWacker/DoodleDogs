@model DataDomain.Puppy

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link rel="stylesheet" href="~/css/litterDetail.css" asp-append-version="true" />
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this puppy?</h3>
<div id="puppyContainer">
    <hr />
    <div id="divBoth">
        <div id="divImg">
            <img class="imgBorder" src="~/Photos/@Model.Image" class="parent card-img-top" alt="Puppy Image" style="width: 60%; margin-bottom: 1em; object-fit: cover;">
        </div>
        <div id="divText" class="d-flex justify-content-center">
            <dl class="row text-center">
                <dd class="col-sm-10">
                    <b>Puppy: </b>@Html.DisplayFor(model => model.PuppyID)
                </dd>
                <dd class="col-sm-10">
                    <b>Breed: </b>@Html.DisplayFor(model => model.BreedID)
                </dd>
                <dd class="col-sm-10">
                    <b>Litter: </b>@Html.DisplayFor(model => model.LitterID)
                </dd>
                <dd class="col-sm-10">
                    <b>Medical Record: </b>@Html.DisplayFor(model => model.MedicalRecordID)
                </dd>
            </dl>
            <dl class="row text-center">
                <dd class="col-sm-10">
                    <b>Gender: </b>@Html.DisplayFor(model => model.Gender)
                </dd>
                <dd class="col-sm-10">
                    <b>Price: </b>$@Html.DisplayFor(model => model.Price)
                </dd>
                <dd class="col-sm-10">
                    <b>Adopted: </b>@Html.DisplayFor(model => model.Adopted)
                </dd>
                <dd class="col-sm-10">
                    <b>Microchip: </b>@Html.DisplayFor(model => model.Microchip)
                </dd>
            </dl>
        </div>
    </div>
</div>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" style="margin-top: 1em"/>
        <a asp-action="IndexBasic" class="btn btn-sm btn-outline-primary" style="margin-top: 1em">Back to List</a>
    </form>
