@model LitterDetailsViewModel

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link rel="stylesheet" href="~/css/litterDetail.css" asp-append-version="true" />
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this litter?</h3>
<div id="container">
    <hr />
    <div id="divBoth">
        <div id="divImg">
            <img class="imgBorder" src="~/Photos/@Model.MotherDog.Image" class="parent card-img-top" alt="Mother Dog Image" style="margin-bottom: 1em; object-fit: cover;">
            <img id="imgLitter" src="~/Photos/@Model.Litter.Image" class="card-img-top" alt="Litter Image" style="margin-bottom: 1em; object-fit: cover;">
            <img class="imgBorder" src="~/Photos/@Model.FatherDog.Image" class="parent card-img-top" alt="Father Dog Image" style="margin-bottom: 1em; object-fit: cover;">
        </div>

        <div id="divText" class="d-flex justify-content-center">
            <dl class="row text-center">
                <dd class="txtLitter col-sm-10">
                    <b>Father Dog Name:  </b> @Html.DisplayFor(model => model.FatherDog.FatherDogID)
                </dd>
                <dd class="txtLitter col-sm-10">
                    <b>Mother Dog Name:  </b> @Html.DisplayFor(model => model.MotherDog.MotherDogID)
                </dd>
                <dd class="txtLitter col-sm-10">
                    <b>Date of Birth:  </b> @Html.DisplayFor(model => model.Litter.DateOfBirth)
                </dd>
                <dd class="txtLitter col-sm-10">
                    <b>Go Home Date:  </b> @Html.DisplayFor(model => model.Litter.GoHomeDate)
                </dd>
                <dd class="txtLitter col-sm-10">
                    <b>Number of Puppies:  </b> @Html.DisplayFor(model => model.Litter.NumberPuppies)
                </dd>
            </dl>
        </div>
    </div>
</div>
<form asp-action="Delete">
    <input type="hidden" name="litterID" value="@Model.Litter.LitterID" />
    <input type="hidden" name="fatherDogID" value="@Model.FatherDog.FatherDogID" />
    <input type="hidden" name="motherDogID" value="@Model.MotherDog.MotherDogID" />

    <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" style="margin-top: 1em"/> 
     <a asp-action="IndexBasic" class="btn btn-sm btn-outline-primary" style="margin-top: 1em">Back to List</a>
</form>

